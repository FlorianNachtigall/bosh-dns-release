#!/bin/bash -exu

set -o pipefail

RUN_DIR=/var/vcap/sys/run/test-recursor
PIDFILE=$RUN_DIR/test-recursor.pid
LOG_DIR=/var/vcap/sys/log/test-recursor
JOB_DIR=/var/vcap/jobs/test-recursor
RECURSOR_PACKAGE=/var/vcap/packages/test-recursor

create_directories() {
  mkdir -p "${LOG_DIR}"
  mkdir -p "${RUN_DIR}"
}

pid_exists() {
  ps -p "$1" &> /dev/null
}

start() {
  if [ -e "$PIDFILE" ]; then
    pid=$(head -1 "${PIDFILE}")
    if pid_exists "$pid"; then
      return 0
    fi
  fi

  ulimit -n 65536

  pushd ${JOB_DIR}
    "${RECURSOR_PACKAGE}/bin/test-recursor" config/config.yml \
      1>> ${LOG_DIR}/test_recursor.stdout.log \
      2>> ${LOG_DIR}/test_recursor.stderr.log &
  popd

  echo $! > $PIDFILE
}

stop() {
  local pid

  if [ -e $PIDFILE ]; then
    pid=$(head -1 $PIDFILE)
  else
    exit 0
  fi

  if [ -n "$pid" ] && pid_exists "$pid"; then
    set +e
    kill -15 "$pid"
    set -e
  fi

  if [ -e "/proc/$pid" ]; then
    set +e
    kill -9 "$pid"
    set -e
  fi

  rm -f $PIDFILE
}

main() {
  create_directories

  case ${1} in
    start)
      start
      ;;

    stop)
      stop
      ;;

    *)
      echo "Usage: ${0} {start|stop}"
      ;;
  esac
}

main "$@"
